<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">


    <ImageView
        android:id="@+id/rafting_logo"
        android:layout_width="99dp"
        android:layout_height="99dp"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/rafting_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rafting_logo"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="123dp"
        android:text="Rafting Name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rafting_name"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="228dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="110dp"
        android:text="Price:" />

    <TextView
        android:id="@+id/price"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rafting_name"
        android:layout_alignRight="@+id/textView4"
        android:layout_marginLeft="308dp"
        android:layout_marginTop="39dp"
        android:layout_marginRight="-69dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rafting_name"
        android:layout_alignRight="@+id/rafting_logo"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="-91dp"
        android:text="Rating:" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rafting_name"
        android:layout_alignRight="@+id/rafting_logo"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="181dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="-181dp"
        android:text="TextView" />

</RelativeLayout>